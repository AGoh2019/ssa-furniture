<!doctype html>
<html lang="en">

<%- include('../partials/head-products.ejs') %>

<body>

<%- include('../partials/nav-products.ejs') %>

<div class="products content">
    <h2>All Products</h2>
    <div class="container-fluid">
        <div class="row">
        </div>
        <div class="row">
            <div id="cards" class="card-group testcarts">
    <% if (products.length > 0)
    {%>
        <% products.forEach(product => { %>

        <div class="col-sm-3"><div class="card p-2 border border-dark mb-4">
                <img class="card-img-top animate__animated animate__fadeIn" src="<%=product.imageURL%>" alt="product image">
                <div class="card-body">
                    <h5 class="card-title"><%=product.name%></h5>

                    <p class="card-text">$<%=product.price%></p>


                            <a class="single" href="/products/<%= product._id %>">
                                    <p>Click here for details.</p>
                                </a>
                    <form action="/cart/in-cart" method="POST">
                        <input type="hidden" name="name" value="<%=product.name%>">
                        <input type="hidden" name="_id" value="<%=product._id%>">
                        <input type="hidden" name="price" value="<%=product.price%>">
                        <input type="hidden" name="image" value="<%=product.imageURL%>">
                    <input id="addToCart" type="submit" class="btn btn-warning">
                    </form>
                </div>
            </div></div>

        <%})%>
    <%} else {%>
        <p>There are no products to display.</p>
    <%}%>
</div>
        </div>
    </div>
</div>

<%- include('../partials/login-modal.ejs') %>

<!-- UNDER CONSTRUCTION: FOOTER -->

<%- include('../partials/scripts-products.ejs') %>

</body>



</html>