<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sign in</h5>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="modal-body">
                <form class="login-form">
                    <div class="form-group">
                        <label for="txtEmail" class="col-form-label">Email</label>
                        <input id="txtEmail" type="email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="txtPassword" class="col-form-label">Password</label>
                        <input type="password" class="form-control" id="txtPassword">
                        <p id="signedInNotice" class="goodNotice d-none">You're signed in!</p>
                        <p id="alreadyRegisteredNotice" class="badNotice d-none">You've already registered.</p>
                        <p id="plsRegisterNotice" class="badNotice d-none">You have to register first.</p>
                        <p id="registerSuccess" class="goodNotice d-none">You've successfully registered!</p>
                        <p id="registerFailed" class="goodNotice d-none text-danger">Please enter a valid email and password.</p>
                    </div>
                    <!--                    <a href="pages/login.html" class="register-new-user text-danger">New? Register now!</a>-->
                </form>
            </div>

            <div class="modal-footer">
                <button id="btnLogin" class="btn btn-warning">Sign in</button>
                <button id="btnSignUp" class="btn btn-success">Register</button>
                <!--                <button class="btn btn-success" data-dismiss="modal">Close</button>-->
            </div>
        </div>
    </div>
</div>